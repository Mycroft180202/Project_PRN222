        new { ProductId = 1, ProductName = "Sample Product", Description = "Beautiful handmade item", Price = 50.00M, StockQuantity = 100, ImageUrl = "/img/product-1.jpg", CategoryId = 1, CreatedDate = DateTime.Parse("2023-01-01"), UpdatedDate = DateTime.Parse("2023-01-02") }
