@model IEnumerable<Project_PRN222.DTO.CartItemDto>

@{
    ViewData["Title"] = "Checkout - EShopper";
    Layout = null;

    // Dữ liệu tĩnh để hiển thị giao diện khi backend gặp lỗi hoặc không trả về dữ liệu
    var mockCartItems = new List<Project_PRN222.DTO.CartItemDto>
    {
        new Project_PRN222.DTO.CartItemDto { ProductId = 1, ProductName = "Colorful Stylish Shirt", Quantity = 2, Price = 123000M, AddedDate = DateTime.Now },
        new Project_PRN222.DTO.CartItemDto { ProductId = 2, ProductName = "Elegant Silk Scarf", Quantity = 1, Price = 45000M, AddedDate = DateTime.Now }
    };

    // Sử dụng mock data nếu Model là null hoặc rỗng
    var cartItems = Model?.Any() == true ? Model : (IEnumerable<Project_PRN222.DTO.CartItemDto>)mockCartItems;
    var subtotal = cartItems.Sum(item => item.Quantity * item.Price);
    var shippingCost = 30000M; // Giá vận chuyển mặc định
    var totalAmount = subtotal + shippingCost;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>@ViewData["Title"]</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="Vietnamese Handicrafts" name="keywords">
    <meta content="Shop Vietnamese handmade handicrafts" name="description">

    <!-- Favicon -->
    <link href="~/img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet">

    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Customized Stylesheet -->
    <link href="~/css/style.css" rel="stylesheet">

    <style>
        /* Custom styles that blend Bootstrap and Tailwind */
        .form-control:focus {
            box-shadow: 0 0 0 0.2rem rgba(209, 156, 151, 0.25);
            border-color: #D19C97;
        }

        .btn-primary {
            background-color: #D19C97;
            border-color: #D19C97;
        }

        .btn-primary:hover {
            background-color: #c28f89;
            border-color: #c28f89;
        }

        /* Override any conflicting Tailwind styles */
        .form-control {
            display: block;
            width: 100%;
            height: calc(1.5em + 0.75rem + 2px);
            padding: 0.375rem 0.75rem;
            font-size: 1rem;
            font-weight: 400;
            line-height: 1.5;
            color: #495057;
            background-color: #fff;
            background-clip: padding-box;
            border: 1px solid #ced4da;
            border-radius: 0;
            transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
        }

        .shipping-method {
            border: 1px solid #ced4da;
            padding: 15px;
            border-radius: 5px;
            margin-bottom: 15px;
            transition: all 0.3s;
        }

        .shipping-method.selected {
            border-color: #D19C97;
            background-color: rgba(209, 156, 151, 0.1);
        }
    </style>
</head>

<body>
<!-- Header -->
@await Html.PartialAsync("_Header")

<!-- Page Header Start -->
<div class="container-fluid bg-secondary mb-5">
    <div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 300px">
        <h1 class="font-weight-semi-bold text-uppercase mb-3">Checkout</h1>
        <div class="d-inline-flex">
            <p class="m-0"><a href="@Url.Action("Index", "Home")">Home</a></p>
            <p class="m-0 px-2">-</p>
            <p class="m-0"><a href="@Url.Action("Cart", "Cart")">Shopping Cart</a></p>
            <p class="m-0 px-2">-</p>
            <p class="m-0">Checkout</p>
        </div>
    </div>
</div>
<!-- Page Header End -->

<!-- Checkout Start -->
<div class="container-fluid pt-5">
    <div class="row px-xl-5">
        <div class="col-lg-8">
            <div class="mb-4 shadow-sm rounded-lg overflow-hidden">
                <div class="card-header bg-secondary border-0">
                    <h4 class="font-weight-semi-bold m-0">Billing Details</h4>
                </div>
                <div class="card-body">
                    <form id="checkoutForm">
                        <div class="row">
                            <div class="col-md-12 form-group">
                                <label class="text-gray-700">Full Name</label>
                                <input class="form-control" type="text" id="fullName" placeholder="John Doe" required>
                            </div>
                            <div class="col-md-12 form-group">
                                <label class="text-gray-700">E-mail</label>
                                <input class="form-control" type="email" id="email" placeholder="example@email.com" required>
                            </div>
                            <div class="col-md-12 form-group">
                                <label class="text-gray-700">Phone Number</label>
                                <input class="form-control" type="text" id="phoneNumber" placeholder="+84 123 456 789" required>
                            </div>
                            <div class="col-md-12 form-group">
                                <label class="text-gray-700">Address</label>
                                <input class="form-control" type="text" id="shippingAddress" placeholder="123 Street, City, Country" required>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <div class="mb-4 shadow-sm rounded-lg overflow-hidden">
                <div class="card-header bg-secondary border-0">
                    <h4 class="font-weight-semi-bold m-0">Shipping Method</h4>
                </div>
                <div class="card-body">
                    <div class="shipping-method selected">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <input type="radio" id="standardShipping" name="shipmentMethod" value="1" checked class="mr-2">
                                <label for="standardShipping" class="mb-0 font-weight-medium">Standard Shipping</label>
                                <p class="text-muted small mb-0 mt-1">Delivery within 3-5 business days</p>
                            </div>
                            <span class="font-weight-bold">30,000 VND</span>
                        </div>
                    </div>
                    <input type="hidden" id="hiddenShipmentMethodId" value="1">
                </div>
            </div>

            <div class="mb-4 shadow-sm rounded-lg overflow-hidden">
                <div class="card-header bg-secondary border-0">
                    <h4 class="font-weight-semi-bold m-0">Payment Method</h4>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <div class="custom-control custom-radio mb-3">
                            <input type="radio" class="custom-control-input" name="paymentMethod" id="cod" value="COD" checked>
                            <label class="custom-control-label" for="cod">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-money-bill-wave text-primary mr-2"></i>
                                    Cash on Delivery (COD)
                                </div>
                                <small class="text-muted d-block mt-1">Pay when you receive your order</small>
                            </label>
                        </div>
                        <div class="custom-control custom-radio">
                            <input type="radio" class="custom-control-input" name="paymentMethod" id="vnpay" value="VNPAY">
                            <label class="custom-control-label" for="vnpay">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-credit-card text-primary mr-2"></i>
                                    Checkout with VNPAY
                                </div>
                                <small class="text-muted d-block mt-1">Pay securely online with VNPAY</small>
                            </label>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card border-secondary mb-5 shadow-sm rounded-lg overflow-hidden">
                <div class="card-header bg-secondary border-0">
                    <h4 class="font-weight-semi-bold m-0">Order Summary</h4>
                </div>
                <div class="card-body">
                    <h5 class="font-weight-medium mb-3">Products</h5>
                    @foreach (var item in cartItems)
                    {
                        <div class="d-flex justify-content-between mb-2">
                            <p class="mb-0">@item.ProductName</p>
                            <p class="mb-0">@item.Quantity x @item.Price.ToString("N0") VND</p>
                        </div>
                    }
                    <hr class="mt-0 mb-3">
                    <div class="d-flex justify-content-between mb-3 pt-1">
                        <h6 class="font-weight-medium">Subtotal</h6>
                        <h6 class="font-weight-medium">@subtotal.ToString("N0") VND</h6>
                    </div>
                    <div class="d-flex justify-content-between">
                        <h6 class="font-weight-medium">Shipping Fee</h6>
                        <h6 class="font-weight-medium">@shippingCost.ToString("N0") VND</h6>
                    </div>
                </div>
                <div class="card-footer border-secondary bg-transparent">
                    <div class="d-flex justify-content-between mt-2">
                        <h5 class="font-weight-bold">Total</h5>
                        <h5 class="font-weight-bold">@totalAmount.ToString("N0") VND</h5>
                    </div>
                    <button class="btn btn-block btn-primary my-3 py-3" id="placeOrderBtn">
                        <i class="fas fa-shopping-bag mr-2"></i>Place Order
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Checkout End -->

<!-- Footer -->


<!-- JavaScript Libraries -->
<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
<script src="~/lib/easing/easing.min.js"></script>
<script src="~/lib/owlcarousel/owl.carousel.min.js"></script>

<!-- Contact Javascript File -->
<script src="~/mail/jqBootstrapValidation.min.js"></script>
<script src="~/mail/contact.js"></script>

<!-- Template Javascript -->
<script src="~/js/main.js"></script>

<!-- Custom JavaScript for Checkout -->
<script>
    $(document).ready(function() {
        // Format currency
        function formatCurrency(amount) {
            return new Intl.NumberFormat('vi-VN').format(amount) + ' VND';
        }

        // Place order button click handler
        $('#placeOrderBtn').click(function(e) {
            e.preventDefault();

            // Get form data
            var fullName = $('#fullName').val();
            var email = $('#email').val();
            var phoneNumber = $('#phoneNumber').val();
            var shippingAddress = $('#shippingAddress').val();
            var shipmentMethodId = 1; // Fixed to standard shipping
            var paymentMethod = $('input[name="paymentMethod"]:checked').val();

            // Validate form data
            if (!fullName) {
                alert('Please enter your full name');
                return;
            }

            if (!email) {
                alert('Please enter your email');
                return;
            }

            if (!phoneNumber) {
                alert('Please enter your phone number');
                return;
            }

            if (!shippingAddress) {
                alert('Please enter your shipping address');
                return;
            }

            if (!paymentMethod) {
                alert('Please select a payment method');
                return;
            }

            // Create data object to send
            var checkoutData = {
                fullName: fullName,
                email: email,
                phoneNumber: phoneNumber,
                shippingAddress: shippingAddress,
                billingAddress: shippingAddress, // Use same address for billing
                shipmentMethodId: shipmentMethodId,
                paymentMethod: paymentMethod
            };

            console.log('Sending checkout data:', checkoutData);

            // Send request to API
            $.ajax({
                url: '/api/Order/checkout',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(checkoutData),
                success: function(response) {
                    console.log('Checkout response:', response);
                    if (paymentMethod === 'VNPAY' && response.paymentUrl) {
                        // Redirect to VNPAY payment page
                        window.location.href = response.paymentUrl;
                    } else {
                        // Show success message
                        alert(response.message || 'Order placed successfully!');
                        // Redirect to home page
                        window.location.href = '/Home/Index';
                    }
                },
                error: function(xhr) {
                    console.error('Checkout error:', xhr);
                    var errorMessage = xhr.responseJSON?.message || 'An error occurred during checkout';
                    alert('Error: ' + errorMessage);
                }
            });
        });
    });
</script>
</body>
</html>